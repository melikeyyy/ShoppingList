<!doctype html>
<html lang="en">
<head>
    <title>Login 10</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <link href="https://fonts.googleapis.com/css?family=Lato:300,400,700&display=swap" rel="stylesheet">

    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">

    <link rel="stylesheet" href="~/AdminLTE-3.0.4/login-form-20/css/style.css">

</head>
<body class="img js-fullheight" style="background-image: url(/AdminLTE-3.0.4/login-form-20/images/bg.jpg);">
    <section class="ftco-section">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-6 text-center mb-5">
                    <h2 class="heading-section">Alışveriş Listem</h2>
                </div>
            </div>
            <div class="row justify-content-center">
                <div class="col-md-6 col-lg-4">
                    <div class="login-wrap p-0">
                        @using (Html.BeginForm("UserRegister", "Account", FormMethod.Post))
                        {
                            <div class="form-group">
                                <input type="text" name="UserName" id="name" class="form-control" placeholder="Kullanıcı Adı" required>
                            </div>
                            <br />
                            <div class="form-group">
                                <input type="text" name="UserMail" id="mail" class="form-control" placeholder="Mail" required>
                            </div>
                            <br />
                            <div class="form-group">
                                <input id="password-field" name="UserPassword" type="password" class="form-control" placeholder="Şifre" required>
                                <span toggle="#password-field" class="fa fa-fw fa-eye field-icon toggle-password"></span>
                            </div>
                            <br />
                            <div class="form-group">
                                <input id="password-field" name="UserPassword" type="password" class="form-control" placeholder="Şifre Tekrar" required>
                                <span toggle="#password-field" class="fa fa-fw fa-eye field-icon toggle-password"></span>
                            </div>
                            <br />
                            <div class="form-group">
                                <input type="submit" class="register" name="Kayıt Ol" value="Kayıt Ol" style="background-color:cornflowerblue">
                            </div>
                        }
                        <div class="social d-flex text-center">
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <script src="~/AdminLTE-3.0.4/login-form-20/js/jquery.min.js"></script>
    <script src="~/AdminLTE-3.0.4/login-form-20/js/popper.js"></script>
    <script src="~/AdminLTE-3.0.4/login-form-20/js/bootstrap.min.js"></script>
    <script src="~/AdminLTE-3.0.4/login-form-20/js/main.js"></script>

</body>
</html>